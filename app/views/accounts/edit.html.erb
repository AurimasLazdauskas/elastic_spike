<%= form_for(@account) do |f| %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :address %><br />
      <%= f.text_field :address %>
    </p>
    <p>
      <%= f.label :balance %><br />
      <%= f.text_field :balance %>
    </p>
    <p>
      <%= f.submit "Update" %>
    </p>
<% end %>
